<Page x:Class="QuizApp.Views.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuizApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenu">

    <Grid Background="{StaticResource BackgroundGradient}">
        <TextBlock Text="Quiz" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,70,0,0"/>
        <Button Content="Rozwiąż" Width="150" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Rozwiaz_Click"/>
        <Button Content="Stwórz" Width="150" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,130,0,0" Click="Stworz_Click"/>
    </Grid>
</Page>
